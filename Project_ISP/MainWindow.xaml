<Window x:Class="Project_ISP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Program" Height="350" Width="525">
    <Grid>
        <ListBox Margin="12,12,254,12" Name="ProgramList" SelectionChanged="SelectionChanged" FontSize="14">
            <ListBoxItem Content="Label the Drink" FontSize="16" />
        </ListBox>
        <TextBlock Height="131" Margin="0,139,12,0" Name="Description" Text="Select an option on the left, then press Go!" VerticalAlignment="Top" HorizontalAlignment="Right" Width="236" TextWrapping="WrapWithOverflow" />
        <Button Content="Go!" Margin="0,0,12,12" Name="button1" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Launch" />
    </Grid>
</Window>
