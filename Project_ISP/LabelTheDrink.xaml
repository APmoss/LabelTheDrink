        <Image Height="237" HorizontalAlignment="Left" Margin="12,62,0,0" Name="image1" Stretch="UniformToFill" VerticalAlignment="Top" Width="323" Source="/Project_ISP;component/cup.jpg" />
    </Grid>
</Window>
